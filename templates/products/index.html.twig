{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1 class="flex justify-center mb-8">Liste Produits</h1>
    <a class="ml-32 font-semibold hover:font-bold" href="{{ path('app_home') }}" >Retour</a>
        <div class="grid grid-cols-3 gap-4 p-4">
        {% for product in products %}
            <div class=" flex flex-col items-center">
                <a class="produit" href="{{ path('app_products_show', {'id': product.id}) }}">
                    <img src="{{ asset(product.image) }}">
                </a>
                <p class="font-semibold">{{ product.nom }}</p>
                <p>{{ product.prix }}</p>
                <p>
                    <a href="{{ path('app_panier_add', {'id': product.id}) }}">ajouter au panier</a>
                </p>
            </div>
        {% else %}
            Pas d'articles
        {% endfor %}
        </div>

{% endblock %}
